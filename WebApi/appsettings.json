{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning", // Set this to Information level
        "System": "Warning" // Set this to Information level
      }
    },
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "FitToFitApp",
      "Workspace": "FitToFit"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    // MASR=true : allows a single database connection to execute and manage multiple commands or queries simultaneously.
    "Database": "Server=.;Database=FitToFit;integrated security=true;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "AuthSettings": {
    "Issuer": "FitToFit_Identity", // ensures that the token is from a trusted authority
    "Audience": "FitToFit_Services", // It identifies who the token is meant for, typically the application or API that will consume the token  ensures that the token is being used by the right service or application.
    "Secret": "FitToFit_Identity_!@#"
  }
}
